cat > .gitignore << 'EOF'
# OS
.DS_Store

# IntelliJ / JetBrains
.idea/
*.iml
out/

# VS Code
.vscode/

# Java / Maven / Gradle
target/
build/
.gradle/
!.mvn/wrapper/maven-wrapper.jar

# Logs
*.log

# Env / secrets
.env
*.pem
*.key
*.crt

# Docker
**/.docker/

# WireGuard configs (never commit)
*.conf
wg0.conf
EOF